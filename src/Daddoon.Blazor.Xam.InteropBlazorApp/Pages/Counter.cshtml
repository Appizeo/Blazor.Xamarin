@page "/counter"
@using Daddoon.Blazor.Xam.Common.Services
@using Daddoon.Blazor.Xam.InteropApp.Common.Interfaces
@using System.IO
@using System.Threading.Tasks
@inject IXamarinBridge XamarinBridge
<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button onclick="@(async() => await IncrementCount())">Click me</button>

@functions {
    int currentCount = 0;

    private async Task IncrementCount()
    {
        XamarinBridge.DisplayAlert("MyTitle", "Blazor to Xamarin.Forms call works!", "Thanks!");

        currentCount++;
    }
}
